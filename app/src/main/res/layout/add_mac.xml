<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/mac"
        android:layout_width="270dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bordes_blue2"
        />

    <EditText
        android:id="@+id/input_mac"
        android:layout_width="250dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/mac"
        app:layout_constraintBottom_toBottomOf="@id/mac"
        app:layout_constraintEnd_toEndOf="@id/mac"
        app:layout_constraintStart_toStartOf="@id/mac"
        android:maxLines="1"
        android:maxWidth="250dp"
        android:gravity="center"
        android:textSize="15dp"
        android:hint="Put a mac"
        />


    <TextView
        android:id="@+id/resumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specify your device"
        app:layout_constraintEnd_toEndOf="@id/mac"
        app:layout_constraintStart_toStartOf="@id/mac"
        app:layout_constraintBottom_toTopOf="@id/mac"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:textColor="@color/gris_2"
        android:textStyle="italic"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_device"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mac"
        android:layout_marginTop="20dp"
        android:background="@drawable/bordes_blue1"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_mac"
            app:layout_constraintTop_toTopOf="@id/add_device"
            app:layout_constraintBottom_toBottomOf="@id/add_device"
            app:layout_constraintEnd_toEndOf="@id/add_device"
            app:layout_constraintStart_toStartOf="@id/add_device"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>