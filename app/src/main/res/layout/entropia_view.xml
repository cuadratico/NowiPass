<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/fondo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bordes_entropia"
        />

    <EditText
        android:id="@+id/texto_editable"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/fondo"
        app:layout_constraintBottom_toBottomOf="@id/fondo"
        app:layout_constraintStart_toStartOf="@id/fondo"
        app:layout_constraintEnd_toEndOf="@id/fondo"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/texto_editable"
        app:layout_constraintEnd_toEndOf="@id/texto_editable"
        app:layout_constraintStart_toStartOf="@id/texto_editable"
        android:layout_marginTop="5dp"
        android:progress="50"
        />
</androidx.constraintlayout.widget.ConstraintLayout>